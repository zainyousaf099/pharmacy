{
  "name": "clinic-management-desktop",
  "version": "1.0.0",
  "description": "Clinic Management System - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --x64 --dir"
  },
  "author": "Clinic Management",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.clinic.management",
    "productName": "Clinic Management",
    "win": {
      "target": "nsis",
      "signingHashAlgorithms": ["sha256"],
      "sign": null
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "network-discovery.js"
    ],
    "extraResources": [
      {
        "from": "../",
        "to": "django-app",
        "filter": [
          "**/*",
          "!node_modules/**/*",
          "!electron/**/*",
          "!env/**/*",
          "!*.md",
          "!*.bat",
          "!.git/**/*",
          "!__pycache__/**/*",
          "!*.pyc",
          "!Clinic_App_Deployment/**/*",
          "!python-embed.zip"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": false
  }
}
